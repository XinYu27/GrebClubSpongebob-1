<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#EDF6FE"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/driverPlate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="40dp"
        android:elevation="10dp"
        android:text="PPP 1111"
        android:textColor="#000000"
        app:layout_constraintEnd_toStartOf="@id/driverCar"
        app:layout_constraintStart_toEndOf="@+id/imageView9"
        app:layout_constraintTop_toTopOf="@+id/cardView6" />

    <TextView
        android:id="@+id/driverCar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="70dp"
        android:elevation="10dp"
        android:text="Black Myvi"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cardView6" />

    <TextView
        android:id="@+id/driverEat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="35dp"
        android:elevation="5dp"
        android:text="Estimated Arrival Time: 2359"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/driverRating"
        app:layout_constraintTop_toTopOf="@+id/cardView6" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="94dp"
        android:layout_height="81dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:elevation="15dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView9"
        app:layout_constraintTop_toTopOf="@+id/imageView9"
        app:srcCompat="@drawable/driver_icon" />

    <RatingBar
        android:id="@+id/driverRating"
        android:layout_width="242dp"
        android:layout_height="46dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="40dp"
        android:elevation="10dp"
        android:numStars="5"
        android:scaleX="0.55"
        android:scaleY="0.55"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/driverCar"
        android:clickable="false"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView6"
        android:layout_width="354dp"
        android:layout_height="168dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="122dp"
        android:layout_height="119dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="248dp"
        android:elevation="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cardView6"
        app:srcCompat="@drawable/yellowbox" />

    <TextView
        android:id="@+id/driverName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="24dp"
        android:elevation="10dp"
        android:text="Chan Ching Chong"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/imageView9"
        app:layout_constraintTop_toTopOf="@+id/cardView6" />

</androidx.constraintlayout.widget.ConstraintLayout>