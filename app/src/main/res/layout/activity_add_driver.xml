<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddDriver">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="70dp"
        android:layout_height="67dp"
        app:srcCompat="@drawable/driver_icon"
        tools:layout_editor_absoluteX="74dp"
        tools:layout_editor_absoluteY="191dp" />

    <Button
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        tools:layout_editor_absoluteX="155dp"
        tools:layout_editor_absoluteY="554dp" />

    <RatingBar
        android:id="@+id/ratingBar2"
        android:layout_width="244dp"
        android:layout_height="50dp"
        android:scaleX="0.45"
        android:scaleY="0.45"
        tools:layout_editor_absoluteX="118dp"
        tools:layout_editor_absoluteY="208dp" />

    <EditText
        android:id="@+id/driver_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        tools:layout_editor_absoluteX="74dp"
        tools:layout_editor_absoluteY="271dp" />

    <EditText
        android:id="@+id/car_Plate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Car Plate"
        tools:layout_editor_absoluteX="74dp"
        tools:layout_editor_absoluteY="380dp" />

    <EditText
        android:id="@+id/car_Capacity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Car Capacity"
        tools:layout_editor_absoluteX="74dp"
        tools:layout_editor_absoluteY="436dp" />

    <EditText
        android:id="@+id/driver_Location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Location"
        tools:layout_editor_absoluteX="74dp"
        tools:layout_editor_absoluteY="491dp" />

    <EditText
        android:id="@+id/car_Model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Car Model"
        tools:layout_editor_absoluteX="74dp"
        tools:layout_editor_absoluteY="326dp" />

</androidx.constraintlayout.widget.ConstraintLayout>